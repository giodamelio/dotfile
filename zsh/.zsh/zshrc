# Source antigen
source "$HOME/.zsh/antigen/antigen.zsh"

# Load oh-my-zsh
antigen use oh-my-zsh

# Load oh-my-zsh plugins
antigen bundles <<EOBUNDLES
  # Guess what to install when running an unknown command.
  command-not-found

  # A bunch of aliases
  common-aliases

  # Cycle through directorys
  dirhistory

  # Docker autocomplete
  docker

  # Extract any type of archive
  extract

  # Git stuff
  git
  git-extras
  github

  # Golang autocomplete
  golang

  # NPM autocomplete and alias
  npm

  # Some rsync alias
  rsync

  # Systemd alias
  systemd
EOBUNDLES

# Fish like highlighting
antigen bundle zsh-users/zsh-syntax-highlighting

# Setup editor
export EDITOR='nvim'
export VISUAL='gvim'

# Setup NVM
source ~/.nvm/nvm.sh

# Load our functions
fpath=( "$HOME/.zsh/functions" "${fpath[@]}" )
autoload -Uz $(ls $HOME/.zsh/functions)

# Load out aliases
source $HOME/.zsh/aliases.zsh

# Fancy Control-z
source $HOME/.zsh/fancy-control-z.zsh

# Set our theme
antigen theme bureau

# Tell antigen we are done
antigen apply

