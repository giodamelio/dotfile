### BSPWM hotkeys ###
# Exit BSPWM
super + shift + q
  pkill -x sxhkd && \
  bspc quit

# Close or kill a window
super + {_,shift + }c
	bspc node -{c,k}

# Swap current window with the biggest window
super + g
	bspc node -s biggest.local

# Set window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

## Focus and Swap windows and desktops

# Change focused window and move window
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Send window to desktop on active monitor
super + shift + {1-9}
  D={1-9}; \
  bspc node -d "$(bspc query -D -m | sed -n "$D p")"

# Focus desktop on active monitor
super + {1-9}
  D={1-9}; \
  bspc desktop -f "$(bspc query -D -m | sed -n "$D p")"

## Mouse bindings

# Focus windows
~button1
  bspc pointer -g focus

# Move and resize windows
super + button{1-3}
  bspc pointer -g {move,resize_side,resize_corner}

### WM independent hotkeys ###
# Open a terminal
super + Return
  terminator

# Launch a program
super + d
  rofi-colored -show run

# Reload SXHKD config
super + Escape
  echo "Reloading sxhkd" && \
  pkill -USR1 -x sxhkd
